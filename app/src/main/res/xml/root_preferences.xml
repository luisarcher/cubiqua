<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_file_server_category">

        <EditTextPreference
            app:key="server_file_address"
            app:title="@string/pref_file_server_address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="server_file_username"
            app:title="@string/pref_file_server_username"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="server_file_password"
            app:title="@string/pref_file_server_password"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">
        <SwitchPreferenceCompat
            app:key="db_sync"
            app:summaryOff="@string/pref_db_sync_summary_off"
            app:summaryOn="@string/pref_db_sync_summary_on"
            app:title="@string/pref_db_sync_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_db_server_category">
        <EditTextPreference
            app:key="server_db_address"
            app:title="@string/pref_db_server_address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="server_db_name"
            app:title="@string/pref_db_server_name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="server_db_username"
            app:title="@string/pref_db_server_username"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="server_db_password"
            app:title="@string/pref_db_server_password"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
